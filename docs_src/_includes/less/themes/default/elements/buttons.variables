////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// COLOR PALETTES
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//----------------------------------------------------------------------------------------------------------------------
// Focus
//----------------------------------------------------------------------------------------------------------------------
@btn-focus-stroke-color:                                    #8DD1ED;
//----------------------------------------------------------------------------------------------------------------------
// Disabled
//----------------------------------------------------------------------------------------------------------------------
@disabled-color:                                    #ccc;
@btn-disabled-color:                                @cdr-color-btn-primary-disabled-text;
@btn-link-disabled-color:                           #ccc;
@btn-disabled-bg:                                   @cdr-color-btn-primary-disabled;
@btn-disabled-border:                               @cdr-color-btn-primary-disabled-stroke;

//----------------------------------------------------------------------------------------------------------------------
// Default
//----------------------------------------------------------------------------------------------------------------------
@btn-default-color:                                @cdr-color-btn-secondary-text;
@btn-default-active-color:                         @cdr-color-btn-secondary-text-active;
@btn-default-disabled-text:                        @cdr-color-btn-secondary-disabled-text;
@btn-default-bg:                                   @cdr-color-btn-secondary;
@btn-default-active-bg:                            @cdr-color-btn-secondary-active;
@btn-default-disabled-background:                   @cdr-color-btn-secondary-disabled;
@btn-default-border:                               @cdr-color-btn-secondary-stroke;
@btn-default-active-border:                        @cdr-color-btn-secondary-active-stroke;
@btn-default-disabled-border:                       @cdr-color-btn-secondary-disabled-stroke;

//----------------------------------------------------------------------------------------------------------------------
// Primary
//----------------------------------------------------------------------------------------------------------------------
@btn-primary-color:                                @cdr-color-btn-text;
@btn-primary-active-color:                         @cdr-color-btn-text-active;
@btn-primary-bg:                                   @cdr-color-btn-primary;
@btn-primary-active-bg:                            @cdr-color-btn-primary-active;
@btn-primary-border:                               @cdr-color-btn-primary-stroke;
@btn-primary-active-border:                        @cdr-color-btn-primary-active-stroke;

//----------------------------------------------------------------------------------------------------------------------
// Explore Primary
//----------------------------------------------------------------------------------------------------------------------
@btn-explore-color:                               @explore-action-2;
@btn-explore-bg:                                  @explore-action-1;
@btn-explore-border:                              @btn-explore-bg;
@btn-explore-active-bg:                           @explore-action-3;
@btn-explore-active-border:                       @btn-explore-active-bg;

//----------------------------------------------------------------------------------------------------------------------
// High Contrast Primary
//----------------------------------------------------------------------------------------------------------------------
@btn-high-contrast-color:                        @core-architectural-5;
@btn-high-contrast-bg:                           @core-architectural-1;
@btn-high-contrast-border:                       @core-architectural-1;
@btn-high-contrast-active-bg:                    lighten( @core-architectural-1, 20% );
@btn-high-contrast-active-border:                @btn-high-contrast-active-bg;

//----------------------------------------------------------------------------------------------------------------------
// Outline Primary (ghost)
//----------------------------------------------------------------------------------------------------------------------
@btn-outline-color:                              @core-architectural-5;
@btn-outline-bg:                                 transparent;
@btn-outline-border:                             @core-architectural-5;
@btn-outline-active-bg:                          @core-architectural-5;
@btn-outline-active-border:                      @core-architectural-5;

//----------------------------------------------------------------------------------------------------------------------
// Off Price Primary
//----------------------------------------------------------------------------------------------------------------------
@btn-off-price-color:                               @core-architectural-5;
@btn-off-price-bg:                                  @off-price-action-1;
@btn-off-price-border:                              @off-price-action-1;
@btn-off-price-active-bg:                           @off-price-action-2;
@btn-off-price-active-border:                       @off-price-action-2;

//----------------------------------------------------------------------------------------------------------------------
// Off Price Default
//----------------------------------------------------------------------------------------------------------------------
@btn-off-price-default-color:                       @off-price-action-1;
@btn-off-price-default-bg:                          @core-architectural-5;
@btn-off-price-default-border:                      @off-price-action-1;
@btn-off-price-default-active-bg:                   @btn-default-active-bg;
@btn-off-price-default-active-border:               @off-price-action-1;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// SIZE AND SHAPE
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
@btn-font-size:                                    @font-size-large;
@btn-font-size-lg:                                 @font-size-h3;
@btn-font-weight:                                  bold;
@btn-line-height:                                  1;
