.cdr- {
  &h1 {
    font-size: 4.8rem;

    @apply --font-brand;
  }

  &h2 {
    font-size: 4rem;

    @apply --font-copy-secondary;
  }

  &h3 {
    font-size: 3.2rem;

    @apply --font-brand-secondary;
  }

  &h4 {
    font-size: 2.4rem;
  }

  &h5 {
    font-size: var(--font-size-body-copy);
  }

  &h6 {
    font-size: 1.2rem;
  }
}
