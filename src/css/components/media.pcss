.cdr-media-frame {
  position: relative;
  overflow: hidden;

  &::before {
    content: '';
    height: 0;
    display: block;
  }

  /* Aspect Ratios */

  &--square {
    &::before {
      padding-bottom: 100%;
    }
  }

  &--1-2 {
    &::before {
      padding-bottom: 200%;
    }
  }

  &--2-3 {
    &::before {
      padding-bottom: 150%;
    }
  }

  &--3-4 {
    &::before {
      padding-bottom: 133.33333333333%;
    }
  }

  &--9-16 {
    &::before {
      padding-bottom: 177.77777777778%;
    }
  }

  &--2-1 {
    &::before {
      padding-bottom: 50%;
    }
  }

  &--3-2 {
    &::before {
      padding-bottom: 66.6666666667%;
    }
  }

  &--4-3 {
    &::before {
      padding-bottom: 75%;
    }
  }

  &--16-9 {
    &::before {
      padding-bottom: 56.25%;
    }
  }

  /* Cropping */

  &--x-center > &__image {
    max-width: none;
  }

  &--y-center > &__image {
    max-height: none;
  }

  &--left > &__image {
    max-width: none;
    left: 0;
    right: auto;
    transform: translate(0, -50%);
  }

  &--right > &__image {
    max-width: none;
    right: 0;
    left: auto;
    transform: translate(0, -50%);
  }

  &--top > &__image {
    max-height: none;
    top: 0;
    bottom: auto;
    transform: translate(-50%, 0);
  }

  &--bottom > &__image {
    max-height: none;
    top: auto;
    bottom: 0;
    transform: translate(-50%, 0);
  }

  &--left&--bottom > &__image,
  &--right&--bottom > &__image,
  &--left&--top > &__image,
  &--right&--top > &__image {
    transform: none;
  }

  &__image {
    position: absolute;
    top: 50%;
    left: 50%;
    width: auto;
    height: auto;
    max-height: 100%;
    transform: translate(-50%, -50%);

    /* reset responsive so it doesn't break stuff */
    &.cdr-image--responsive {
      width: 100%;
      display: inline;
    }
  }
}

.cdr-media-object {
  align-items: flex-start;
  display: flex;
  max-width: 100%;

  &__figure {
    margin-right: calc(16px);
  }

  &__link {
    position: relative;
    z-index: 1;
  }

  &__title {
    &__link {
      position: static;

      &::before {
        content: "";
        display: block;
        position: absolute;
        width: 100%;
        z-index: 0;
        height: 100%;
        left: 0;
        top: 0;
        transition: trasparent 0.1s ease-out;
        background-color: trasparent;
      }
    }
  }

  &__body {
    flex: 1;
  }

  &__link {
    position: relative;
    z-index: 1;
  }

  &__body,
  &__body:last-child {
    margin-bottom: 0;
  }

  &--center {
    align-items: center;
  }

  &--stretch {
    & > .cdr-media-object__figure {
      width: calc(100% + 32px) !important;
      max-width: calc(100% + 32px) !important;
      margin-left: calc(-16px) !important;
      margin-right: calc(-16px) !important;
    }
  }

  &--block {
    padding-right: calc(16px);
    padding-left: calc(16px);

    & > .cdr-media-object__figure {
      width: calc(100% + 32px) !important;
      max-width: calc(100% + 32px) !important;
      margin-left: calc(-16px) !important;
      margin-right: calc(-16px) !important;
    }
  }

  &--top {
    flex-direction: column;

    & > .cdr-media-object__figure {
      margin-right: 0;
      margin-bottom: calc(16px);
    }
  }

  &--bottom {
    flex-direction: column;

    & > .cdr-media-object__figure {
      order: 1;
      margin-right: 0;
      margin-top: calc(16px);
    }
  }

  &--reverse > .cdr-media-object__figure {
    margin-right: 0;
      margin-left: calc(16px);
  }
}

.cdr-image {
  max-width: 100%;

  &--responsive {
    display: block;
    width: 100%;
    height: auto;
  }

  &--rounded {
    border-radius: var(--image-rounded-rad);
  }

  &--circle {
    border-radius: 50%;
  }

  &--thumbnail {
    padding: var(--image-thumbnail-p);
    border-radius: var(--image-thumbnail-rad);
    border: var(--image-thumbnail-border);
    border-color: var(--image-thumbnail-bc);
  }
}
