.cdr-media-frame {
  position: relative;
  overflow: hidden;

  &::before {
    content: '';
    padding-bottom: 100%;
    height: 0;
    display: block;
  }

  &__image {
    position: absolute;
    top: 50%;
    left: 50%;
    width: auto;
    max-width: 100%;
    height: auto;
    max-height: 100%;
    transform: translate(-50%, -50%);
  }
}
