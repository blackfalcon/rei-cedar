    max-width: 75%;
  }

  &._col10 {
    flex-basis: 83.33333333%;
    max-width: 83.33333333%;
  }

  &._col11 {
    flex-basis: 91.66666667%;
    max-width: 91.66666667%;
  }

  &._col12 {
    flex-basis: 100%;
    max-width: 100%;
  }

  /* col offsets */

  &.-colLeft0 {
    margin-left: 0;
  }

