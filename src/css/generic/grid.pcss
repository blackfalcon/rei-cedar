:root {
  --gridGutter: 20px;
  --colBottom: 10px;
}

/*******************
  grid classes
********************/

.cdr-grid {
  display: flex;
  flex-flow: row wrap;
  margin: 0 calc(var(--gridGutter) * -1 / 2);

  &.cdr-col {
    margin: 0;
    padding: 0;
  }

  /* grid by number */

  &._grid1 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 100%;
      max-width: 100%;
    }
  }

  &._grid2 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 50%;
      max-width: 50%;
    }
  }

  &._grid3 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 33.33333333%;
      max-width: 33.33333333%;
    }
  }

  &._grid4 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 25%;
      max-width: 25%;
    }
  }

  &._grid5 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 20%;
      max-width: 20%;
    }
  }

  &._grid6 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 16.66666667%;
      max-width: 16.66666667%;
    }
  }

  &._grid7 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 14.28571429%;
      max-width: 14.28571429%;
    }
  }

  &._grid8 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 12.5%;
      max-width: 12.5%;
    }
  }

  &._grid9 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 11.11111111%;
      max-width: 11.11111111%;
    }
  }

  &._grid10 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 10%;
      max-width: 10%;
    }
  }

  &._grid11 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 9.09090909%;
      max-width: 9.09090909%;
    }
  }

  &._grid12 {
    & > .cdr-col:not([class*="_col"]) {
      flex-basis: 8.33333333%;
      max-width: 8.33333333%;
    }
  }

  /* grid modifiers # */

  &.-gridNoGutter {
    margin: 0;

    & > .cdr-col {
      padding: 0;
    }
  }

  &.-gridNoWrap {
    flex-wrap: nowrap;
  }

  &.-gridCenter {
    justify-content: center;
  }

  &.-gridRight {
    justify-content: flex-end;
    align-self: flex-end;
    // TODO: does removing this mess up nesting or something?
    // margin-left: auto;
  }

  &.-gridTop {
    align-items: flex-start;
  }

  &.-gridMiddle {
    align-items: center;
  }

  &.-gridBottom {
    align-items: flex-end;
  }

  &.-gridSpaceBetween {
    justify-content: space-between;
  }

  &.-gridSpaceAround {
    justify-content: space-around;
  }

  /* TODO: do we want this? http://tink.uk/flexbox-the-keyboard-navigation-disconnect/
  &.-gridReverse {
    flex-direction: row-reverse;
  }
  &.-gridColumnReverse {
    flex-direction: column-reverse;
  }
  */

  &.-gridColumn {
    flex-direction: column;

    & > .cdr-col,
    & > .cdr-col[class*="_col"] {
      flex-basis: auto!important;
    }
  }


