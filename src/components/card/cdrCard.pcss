/* TODO: move this to utilities? */

.cdr-add-radius--top {
  border-radius: $radius-card $radius-card 0 0;
}

.cdr-card {
  background-color: $sys-color-activity-card;
  border-color: $sys-color-activity-card-stroke;
  border-radius: $radius-card;
  box-shadow: $shadow-prominence-10;
  color: $sys-color-activity-card-text;
  width: 100%;
}

/* Style variants
    ========================================================================== */

/* TODO: move this to cardContent? */
.cdr-card--content {
  display: flex;
  flex-direction: column;
  position: relative;

  &--media {
    flex-grow: 1;
  }

  &__action {
    position: relative;
    z-index: 1;
  }

  &__snapshot {
    color: $sys-color-gray-base;
  }

  &__body {
    flex: 1;
    display: block;
  }

  &__title {
    &__action {
      position: static;

      &::before {
        content: "";
        display: block;
        position: absolute;
        width: 100%;
        z-index: 0;
        height: 100%;
        left: 0;
        top: 0;
        transition: trasparent 0.1s ease-out;
        background-color: trasparent;
      }
    }
  }
}
